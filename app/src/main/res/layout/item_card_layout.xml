<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.photosflicker.views.BetterRoundedLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/twenty_five_dp"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightBrown"
        android:padding="@dimen/five_dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.example.administrator.photosflicker.views.BetterRoundedImageView
                android:id="@+id/imageContent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/photo_size"
                android:scaleType="centerCrop" />


            <ImageView
                android:id="@+id/hateIcon"
                android:layout_width="@dimen/photoset_thumb"
                android:layout_height="@dimen/photoset_thumb"
                android:layout_gravity="end|center"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:alpha="0"
                android:src="@drawable/unlike" />

            <ImageView
                android:id="@+id/likeIcon"
                android:layout_width="@dimen/photoset_thumb"
                android:layout_height="@dimen/photoset_thumb"
                android:layout_gravity="start|center"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:alpha="0"
                android:src="@drawable/like" />

        </FrameLayout>

        <com.example.administrator.photosflicker.views.BetterRoundedLayout
            android:background="@color/gray"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="25dp"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                tools:text="ha ha ha" />


        </com.example.administrator.photosflicker.views.BetterRoundedLayout>


    </LinearLayout>


</com.example.administrator.photosflicker.views.BetterRoundedLayout>